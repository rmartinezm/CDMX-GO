<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/claqueta"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:id="@+id/adapter_filtro_cine" />

    <ImageView
        android:src="@drawable/concierto"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/adapter_filtro_concierto"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_alignTop="@+id/adapter_filtro_cine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:src="@drawable/museo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="170dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="25dp"
        android:layout_alignLeft="@+id/adapter_filtro_cine"
        android:layout_alignStart="@+id/adapter_filtro_cine" />

    <ImageView
        android:src="@drawable/restaurante"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/adapter_filtro_concierto"
        android:layout_alignStart="@+id/adapter_filtro_concierto" />

</RelativeLayout>