<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffd1f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="3dp"
            android:orientation="horizontal"
            android:background="#ffd1f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <ImageView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="#ffd1f1"
                android:src="@drawable/claqueta"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/filtro_cine" />

            <ImageView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/filtro_restaurante"
                android:background="#ffd1f1"
                android:src="@drawable/restaurante"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <ImageView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="#ffd1f1"
                android:src="@drawable/concierto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/filtro_concierto"/>

            <ImageView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/filtro_museo"
                android:background="#ffd1f1"
                android:src="@drawable/museo"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            </LinearLayout>

    </HorizontalScrollView>

</android.support.v7.widget.CardView>