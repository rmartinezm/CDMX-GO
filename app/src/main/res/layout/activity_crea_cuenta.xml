<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crea_cuenta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.programacion.robertomtz.cdmx_go.Activities.CreaCuentaActivity">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/crear_cuenta"
        android:id="@+id/crear_cuenta_btn_crear_cuenta"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/crear_cuenta_switch_informacion"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/aceptar_notificaciones"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/crear_cuenta_btn_crear_cuenta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/correo"
        android:maxLines="1"
        android:id="@+id/crear_cuenta_et_correo"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/crear_cuenta_switch_informacion"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/password"
        android:maxLines="1"
        android:id="@+id/crear_cuenta_et_password"
        android:layout_above="@+id/crear_cuenta_et_correo"
        android:layout_alignLeft="@+id/crear_cuenta_et_correo"
        android:layout_alignStart="@+id/crear_cuenta_et_correo"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/nombre_usuario"
        android:maxLines="1"
        android:id="@+id/crear_cuenta_et_usuario"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/crear_cuenta_et_password"
        android:layout_alignLeft="@+id/crear_cuenta_et_password"
        android:layout_alignStart="@+id/crear_cuenta_et_password" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:id="@+id/crear_cuenta_iv_image"
        android:layout_above="@+id/crear_cuenta_et_usuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/crear_cuenta"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
